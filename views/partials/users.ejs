<body>
  <main class="users-painel">
    <!--FORMULÁRIO ADD USUÁRIO-->
    <h4>Insira as informações do novo usuário</h4>
    <form action="/users">         
      <div class="user-datas">
        <label for="name">Nome</label>
        <input type="text" name="name" id="name">
      </br>
        <label for="email">E-mail</label>
        <div class="email error"></div>
        <input type="email" name="email" id="email"> 
      </br>
        <label for="password">Senha</label>
        <div class="password error"></div>
        <input type="password" name="password" id="password">
      </div>
      <div class="permissions">   
        <h4>Defina o nível de acesso</h4>
        <label for="#"><input type="radio" onclick="getChecked()" name="user-type" value="viewer" checked>Visualizador</label>
        <label for="#"><input type="radio" onclick="getChecked()" name="user-type" value="requester">Solicitante</label>         
        <label for="#"><input type="radio" onclick="getChecked()" name="user-type" value="administrator">Administrador</label>
      </div> 
      <button class="btn-black">Cadastrar</button>
    </form>
